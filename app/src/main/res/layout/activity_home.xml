<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".Home">


    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="404dp"
        android:layout_height="158dp"
        android:background="#41FFFFFF"
        android:backgroundTint="@color/black"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="152dp"
            android:layout_height="131dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/lotus" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/art"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#FCE8E3E3"
            android:text="Art"
            android:textAlignment="center"
            android:textColor="#F44336"
            app:cornerRadius="36dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="401dp"
        android:layout_height="169dp"
        android:background="#41FFFFFF"
        android:backgroundTint="@color/black"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="152dp"
            android:layout_height="131dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/faber" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/artsupply"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#F44336"
            android:text="ArtSupply"
            android:textAlignment="center"
            android:textColor="#FCE8E3E3"
            android:textSize="12dp"
            app:cornerRadius="36dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/artist"
        android:layout_width="407dp"
        android:layout_height="161dp"
        android:background="#41FFFFFF"
        android:backgroundTint="@color/black"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear2"
        app:layout_constraintVertical_bias="0.34"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="152dp"
            android:layout_height="131dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/raviverma" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/artist1"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#F44336"
            android:text="Artist"
            android:textAlignment="center"
            android:textColor="#FCE8E3E3"
            app:cornerRadius="36dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/baseline_arrow_back_24"
        android:drawablePadding="10dp"
        android:hint="Back"
        android:padding="20dp"
        android:textColor="#F3EFE7E7"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="ExtraText,MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>